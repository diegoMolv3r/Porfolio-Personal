<section id="projects-section" class="max-w-7xl mx-auto w-full px-4 py-16 relative">
    <div class="absolute inset-0 opacity-30"></div>
    
    <div class="relative z-10">
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-center mb-16 text-white animate-fade-in-up">PROYECTOS</h2>
        <div id="contenedor-proyectos" class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-7xl mx-auto px-4 w-full">
            {
            PROJECTS.map((project, index) => {
                const mainTech = TECH_CONFIG[project.mainTecnologia as keyof typeof TECH_CONFIG] || TECH_CONFIG["Javascript"];
                return (
                    <article class="bg-gray-800/70 backdrop-blur-sm rounded-2xl border border-gray-700 overflow-hidden hover-lift animate-scale-in group" style={`animation-delay: ${index * 0.1}s`}>
                        <div class="relative h-48 overflow-hidden">
                            <img 
                                src={project.imagen} 
                                alt={project.titulo}
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                                onerror="this.src='/assets/img/projects/default-project.jpg'"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-transparent"></div>
                            <div class={`absolute top-4 left-4 ${mainTech.bgColor} text-white px-3 py-1 rounded-full text-sm font-medium flex items-center gap-2`}>
                                <i class={mainTech.icon}></i>
                                {project.mainTecnologia}
                            </div>
                        </div>
                        
                        <div class="p-6 flex flex-col gap-4">
                            <div class="flex items-center gap-3">
                                <div class={`w-12 h-12 ${mainTech.bgColor} rounded-lg flex items-center justify-center`}>
                                    <i class="bi bi-code-slash text-white text-xl"></i>
                                </div>
                                <h3 class="text-xl font-bold text-white">
                                    {project.titulo}
                                </h3>
                            </div>
                            
                            <p class="text-gray-300 text-sm leading-relaxed">
                                {project.descripcion}
                            </p>
                            
                            <div class="flex flex-wrap gap-2">
                                {project.tecnologias.map((tecnologia) => {
                                    const tech = TECH_CONFIG[tecnologia as keyof typeof TECH_CONFIG] || TECH_CONFIG["Javascript"];
                                    return (
                                        <span class={`${tech.color} bg-gray-800 text-xs px-3 py-2 rounded-lg border ${tech.borderColor} hover:bg-gray-700 transition-all duration-300 flex items-center gap-2`}>
                                            <i class={tech.icon}></i>
                                            {tecnologia}
                                        </span>
                                    );
                                })}
                            </div>
                            
                            <div class="mt-auto flex gap-3">
                                <a href={project.enlace} target="_blank" rel="noopener noreferrer"
                                   class={`inline-flex items-center gap-2 text-sm font-medium ${mainTech.color} hover:text-white transition-all duration-300 bg-gray-800 px-4 py-2 rounded-lg hover:bg-gray-700 border ${mainTech.borderColor} flex-1 justify-center`}>
                                    <i class="bi bi-github text-lg"/>Repositorio
                                </a>
                                {project.sitio && (
                                    <a href={project.sitio} target="_blank" rel="noopener noreferrer"
                                       class={`inline-flex items-center gap-2 text-sm font-medium ${mainTech.color} hover:text-white transition-all duration-300 bg-gray-800 px-4 py-2 rounded-lg hover:bg-gray-700 border ${mainTech.borderColor} flex-1 justify-center`}>
                                        <i class="bi bi-box-arrow-up-right text-lg"/>Ver Sitio
                                    </a>
                                )}
                            </div>
                        </div>
                    </article>
                );
            })
            }
        </div>
    </div>
</section>