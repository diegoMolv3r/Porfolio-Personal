<section id="contact-section" class="py-16 max-w-7xl mx-auto w-full px-4 text-white">
  <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-center mb-10">CONTACTO</h2>
  
  <div class="max-w-2xl mx-auto">
    <form action="https://formsubmit.co/molverdiego@gmail.com" class="space-y-6" id="contact-form" method="POST">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <input 
            type="text" 
            name="nombre" 
            placeholder="Nombre completo" 
            required
            class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-[#ca1444] focus:ring-2 focus:ring-[#ca1444] transition-all duration-300"
          >
        </div>
        <div>
          <input 
            type="text" 
            name="asunto" 
            placeholder="Asunto" 
            required
            class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-[#ca1444] focus:ring-2 focus:ring-[#ca1444] transition-all duration-300"
          >
        </div>
      </div>
      
      <div>
        <input 
          type="email" 
          name="email" 
          placeholder="Email" 
          required
          class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-[#ca1444] focus:ring-2 focus:ring-[#ca1444] transition-all duration-300"
        >
      </div>
      
      <div>
        <textarea 
          name="mensaje" 
          placeholder="Escribe tu mensaje aquí" 
          rows="4"
          required
          class="w-full px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-[#ca1444] focus:ring-2 focus:ring-[#ca1444] transition-all duration-300 resize-none"
        ></textarea>
      </div>
    
      <input type="hidden" name="_captcha" value="false">
      
      <div class="text-center">
        <button type="submit" class="bg-[#ca1444] hover:bg-[#a01236] text-white font-semibold px-8 py-3 rounded-lg transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[#ca1444] focus:ring-offset-2 focus:ring-offset-gray-900" onclick="modal.showModal()">
          Enviar Mensaje
        </button>
      </div>
    </form>
  </div>
</section>

<dialog id="modal" class="backdrop:bg-black/50 backdrop:backdrop-blur-sm p-0 rounded-2xl border-0 shadow-2xl m-auto">
  <div class="bg-gray-900 text-white p-8 rounded-2xl max-w-md mx-auto">
    <div class="text-center space-y-4">
      <div class="w-16 h-16 bg-[#ca1444] rounded-full flex items-center justify-center mx-auto mb-4">
        <i class="bi bi-check-lg text-2xl text-white"></i>
      </div>
      <h2 class="text-2xl font-bold text-white">¡Gracias por tu mensaje!</h2>
      <p class="text-gray-300 text-lg">Te contactaré lo antes posible</p>
      <button 
        onclick="modal.close()" 
        class="mt-6 bg-[#ca1444] hover:bg-[#a01236] text-white font-semibold px-6 py-2 rounded-lg transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[#ca1444] focus:ring-offset-2 focus:ring-offset-gray-900"
      >
        Cerrar
      </button>
    </div>
  </div>
</dialog>



