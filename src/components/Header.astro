---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---
<header class="fixed top-0 left-0 w-full bg-gray-900 text-white shadow-md z-50">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-6 lg:px-8 h-20">
    <!-- Logo + Nombre -->
    <a href="#home-section" class="flex items-center gap-3">
      <img src="/assets/img/diego-molver.png" alt="Diego Molver" class="h-12 w-12 sm:h-14 sm:w-14 rounded-full object-cover" />
      <span class="font-bold text-lg sm:text-xl md:text-2xl tracking-wide">Diego Molver</span>
    </a>

    <!-- Menú de escritorio -->
    <nav class="hidden md:flex gap-6 lg:gap-8 items-center font-semibold text-sm sm:text-base md:text-lg">
      <a href="#projects-section" class="hover:text-[#ca1444] transition flex items-center gap-2">
        <i class="bi bi-folder text-xl md:text-2xl"></i> Proyectos
      </a>
      <a href="#sobreMi-section" class="hover:text-[#ca1444] transition flex items-center gap-2">
        <i class="bi bi-person text-xl md:text-2xl"></i> Sobre mí
      </a>
      <a href="#educacion-section" class="hover:text-[#ca1444] transition flex items-center gap-2">
        <i class="bi bi-mortarboard text-xl md:text-2xl"></i> Formación
      </a>
    </nav>

    <!-- Menú hamburguesa móvil -->
    <div class="md:hidden">
      <Astronav closeOnClick>
        <MenuIcon>
          <i class=" text-3xl text-white cursor-pointerbi bi-list"></i>
        </MenuIcon>
        <MenuItems class="absolute top-full left-0 w-full bg-gray-900 shadow-lg border-t border-gray-700 z-50">
          <nav class="flex flex-col">
            <a href="#projects-section" class="hover:text-[#ca1444] transition flex items-center gap-3 text-lg font-semibold py-4 px-6 border-b border-gray-700 w-full">
              <i class="bi bi-folder text-2xl"></i> Proyectos
            </a>
            <a href="#sobreMi-section" class="hover:text-[#ca1444] transition flex items-center gap-3 text-lg font-semibold py-4 px-6 border-b border-gray-700 w-full">
              <i class="bi bi-person text-2xl"></i> Sobre mí
            </a>
            <a href="#educacion-section" class="hover:text-[#ca1444] transition flex items-center gap-3 text-lg font-semibold py-4 px-6 w-full">
              <i class="bi bi-mortarboard text-2xl"></i> Formación
            </a>
          </nav>
        </MenuItems>
      </Astronav>
    </div>
  </div>
</header>
